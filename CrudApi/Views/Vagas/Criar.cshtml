@using CrudApi.Enums
@model VagasModel
@{
    ViewData["Title"] = "Banco de Vagas";
}

<div class="container-fluid">

    <strong class="display-4">Crie uma Vaga</strong>

    <hr />

   <form asp-controller="Vagas" asp-action="Criar" method="post">

      <div class="form-group">
        <label for="nome">Vaga</label>        
      <select asp-for="Vagas" class="form-control">
          <option value="0">Selecione</option>
          <option value="@VagasEnum.AnalistaDeSistemas">Analista De Sistemas</option>
          <option value="@VagasEnum.CientistaDeDadosEmPython">Cientista De Dados</option>
          <option value="@VagasEnum.DesenvolvedorJavaScript">Desenvolvedor(a) Java Script</option>
          <option value="@VagasEnum.DesenvolvedorPHP">Desenvolvedor(a) PHP</option>
          <option value="@VagasEnum.DesenvolvedorReactNative">Desenvolvedor(a) React Native</option>
          <option value="@VagasEnum.DesenvolvedorWordpress">Desenvolvedor(a) Wordpress</option>
          <option value="@VagasEnum.EstagiárioDeTI">Estagiário(a) De TI</option>
          <option value="@VagasEnum.SuporteTécnicoEmInformática">Suporte Técnico Em Informática</option>
          <option value="@VagasEnum.AuxiliarDeTI">Auxiliar De TI</option>
          <option value="@VagasEnum.AnalistaDeInfraestrutura">Analista De Infraestrutura</option>
          <option value="@VagasEnum.AnalistaDeNegóciosEProjetos">Analista De Negócios E Projetos</option>
          <option value="@VagasEnum.AnalistaDeQualidadeTI">Analista De Qualidade TI</option>
          <option value="@VagasEnum.ConsultorTécnicoJr">Consultor(a) Técnico Jr</option>        
          <option value="@VagasEnum.GerenteDeProjetosTI">Gerente De Projetos TI</option>
          <option value="@VagasEnum.DesenvolvedorNodeJsBackEnd">Desenvolvedor(a) Node.Js Back-End</option>
          <option value="@VagasEnum.ProgramadorEstagiário">Programador(a) Estagiário(a)</option>
          <option value="@VagasEnum.ProgramadorJr">Programador(a) Jr</option>
          <option value="@VagasEnum.ProgramadorPleno">Programador(a) Pleno(a)</option>
          <option value="@VagasEnum.ProgramadorSênior">Programador(a) Sênior</option>
          <option value="@VagasEnum.DesenvolvedorFullStack">Desenvolvedor(a) - Full Stack</option>  
      </select>
      </div>       

      <div class="form-group">
        <label for="nome">Requisitos</label>
        <input type="text" asp-for="Requisitos" class="form-control" placeholder="Informe as requeridas tecnologias da vaga">
       @Html.ValidationMessageFor(x => x.Requisitos)
      </div>

      <button type="submit" class="btn btn-info btn-block">Adicionar</button>
      <a class="btn btn-secondary btn-block" asp-controller="Vagas" asp-action="Index" role="button">Voltar</a>

   </form>
 
</div>
